<!DOCTYPE html>
<html>
<head>
  <title> To-Do List</title>

  <style>
    body { font-family: Arial; padding: 20px; }
    input { padding: 8px; width: 200px; }
    button { padding: 8px; margin-left: 5px; cursor: pointer; }
    li { margin-top: 8px; }
    .completed { text-decoration: line-through; color: gray; }
  </style>
</head>
<body>

<h2>To-Do List </h2>

<input id="taskInput" type="text" placeholder="Enter a task">
<button onclick="addTask()">Add</button>

<ul id="taskList"></ul>

<script>
let tasks = []; // Stores tasks

// 1. Add new task
function addTask() {
  let taskText = document.getElementById("taskInput").value.trim();

  if (taskText === "") {
    alert("Please enter a task");
    return;
  }

  tasks.push(taskText);      // add to array
  document.getElementById("taskInput").value = ""; // clear box

  displayTasks(); // update screen
}

// 2. Display tasks on page
function displayTasks() {
  const list = document.getElementById("taskList");
  list.innerHTML = ""; // clear old list

  tasks.forEach((task, index) => {
    let li = document.createElement("li");

    // Click to mark as complete
    li.textContent = task;
    li.onclick = function() {
      li.classList.toggle("completed");
    };

    // Delete button
    let btn = document.createElement("button");
    btn.textContent = "Delete";
    btn.onclick = function() {
      deleteTask(index);
    };

    li.appendChild(btn);
    list.appendChild(li);
  });
}

// 3. Delete task
function deleteTask(i) {
  tasks.splice(i, 1); // remove from array
  displayTasks();     // refresh UI
}
</script>

</body>
</html>
